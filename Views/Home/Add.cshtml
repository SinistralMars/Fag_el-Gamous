        <input type="text" asp-for="Burial.Ageatdeath" />
    </div>

    <div>
        <label for="Southtofeet">South to Feet:</label>
        <input type="text" asp-for="Burial.Southtofeet" />
    </div>

    <div>
        <label for="Excavationrecorder">Excavation Recorder:</label>
        <input type="text" asp-for="Burial.Excavationrecorder" />
    </div>

    <div>
        <label for="Photos">Photos:</label>
        <input type="text" asp-for="Burial.Photos" />
    </div>

    <div>
        <label for="Hair">Hair:</label>
        <input type="text" asp-for="Burial.Hair" />
    </div>

    <div>
        <label for="Burialmaterials">Burial Materials:</label>
        <input type="text" asp-for="Burial.Burialmaterials" />
    </div>

    <div>
