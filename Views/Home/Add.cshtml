    <div>
        <label for="StructureValue">Structure Value:</label>
        <input type="text" asp-for="Burial.StructureValue" />
    </div>

    <div>
        <label for="ColorValue">Color Value:</label>
        <input type="text" asp-for="Burial.ColorValue" />
    </div>

    <div>
        <label for="TextileFunctionValue">Textile Function Value:</label>
        <input type="text" asp-for="Burial.TextileFunctionValue" />
    </div>
    <button type="submit" class="btn btn-primary">Add Burial</button>
</form>

