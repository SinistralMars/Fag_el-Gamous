@model NewTable

@{
    ViewData["Title"] = "Delete Burial";
}


@* Create a form to delete the burial *@

<form asp-action="Delete" asp-controller="Home" method="post">
    <h1>@ViewData["Title"]</h1>
    @* Display the details of the burial record in a definition list *@

    <dl class="row">
        <dt class="col-sm-3">ID:</dt>
        <dd class="col-sm-9">@Model.Id</dd>
        <dt class="col-sm-3">Square North South:</dt>
        <dd class="col-sm-9">@Model.Headdirection</dd>
        <dt class="col-sm-3">Sex:</dt>
        <dd class="col-sm-9">@Model.Sex</dd>
        <dt class="col-sm-3">Face Bundles:</dt>
        <dd class="col-sm-9">@Model.Text</dd>
    </dl>
    @* Ask the user to confirm deletion of the burial *@
    <p>Are you sure you want to delete this burial?</p>

    @* Hidden input field for the burial record ID *@
    <input type="hidden" asp-for="Id" />

    @* Button to submit the form and delete the burial record *@
    <button type="submit" class="btn btn-danger">Delete</button>

    @* Button to cancel the deletion and return to the details page *@
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Cancel</a>

</form>
